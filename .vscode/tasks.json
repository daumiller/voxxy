{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Make Release",
			"command": "/usr/bin/make",
			"args": [ "release" ],
			"options": { "cwd": "${workspaceFolder}" },
			"problemMatcher": [ "$gcc" ],
			"group": { "kind": "build", "isDefault": true },
			"detail": "compiler: /usr/bin/clang"
		},
		{
			"type": "cppbuild",
			"label": "Make Debug",
			"command": "/usr/bin/make",
			"args": [ "debug" ],
			"options": { "cwd": "${workspaceFolder}" },
			"problemMatcher": [ "$gcc" ],
			"group": { "kind": "build", "isDefault": true },
			"detail": "compiler: /usr/bin/clang"
		},
		{
			"type": "cppbuild",
			"label": "Make Very Clean",
			"command": "/usr/bin/make",
			"args": [ "veryclean" ],
			"options": { "cwd": "${workspaceFolder}" },
			"problemMatcher": [ "$gcc" ],
			"group": { "kind": "build", "isDefault": true },
			"detail": "compiler: /usr/bin/clang"
		}
	]
}
